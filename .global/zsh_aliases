# Summaries only for du
alias du='du -s -h'

# Human readable free space
alias df='df -h'

# Colorize Grep
alias grep='grep --color=auto'


# Prompt before cp overwrite
alias cp='cp -i'

# Prompt before mv overwrite
alias mv='mv -i'

# Ping should eventually time out
alias ping='ping -c 5'

# I can never remember which is which
alias more='less'

# Show process names in pgrep
alias pgrep="pgrep -l"

# Show history in less
alias history="history | less"

# Set up "pie" as sed-like perl
alias pie='perl -p -i -e'

# Set up "see" as no-modifications vim
alias see='vim -M'

# Set up view to read from stdin
alias view='vim -M -'

# Use trsh.pl instead of rm
alias rm='~/bin/trsh.pl'

# study to connect to student.cs
alias study='ssh student.cs.uwaterloo.ca'

if [[ $OSTYPE == darwin* ]]; then

  alias la='ls -A -G -F'
  alias ll='ls -A -l -G -F -h'
  alias ls='ls -G -F'

  # Allow mkdir to make parents
  alias mkdir='mkdir -p -v'

elif [[ $OSTYPE == "linux-gnu" ]]; then

  alias la='ls -A -F --color=always'
  alias ll='ls -A -l -F -h --color=always'
  alias ls='ls -F --color=always'

  # Allow mkdir to make parents
  alias mkdir='mkdir -p -v'

elif [[ $OSTYPE == "cygwin" ]]; then

  alias la='ls -A -F --color=always'
  alias ll='ls -A -l -F -h --color=always'
  alias ls='ls -F --color=always'

  # Allow mkdir to make parents
  alias mkdir='mkdir -p -v'

elif [[ $OSTYPE == solaris* ]]; then

  alias la='ls -A -F'
  alias ll='ls -A -l -F'
  alias ls='ls -F'

fi
