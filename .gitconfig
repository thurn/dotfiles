[user]
	name = dthurn
	email = dthurn@fb.com
    editor = emacs
[color]
    branch = auto
    diff = auto
    status = auto
    interactive = auto
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    co = checkout
    tree = log --graph --pretty=oneline --decorate
    up = !git fetch && git rebase trunk
    release = !git fetch && git rebase trunk && git svn dcommit
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.global_gitignore
    pager = "cat"
[apply]
  whitespace = fix
