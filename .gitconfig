[user]
	name = Derek Thurn
	email = derek@thurn.ca
  editor = vim
[diff]
    external = git_diff_wrapper.sh
[pager]
  diff = 
[color]
    branch = auto
    diff = auto
    status = auto
    interactive = auto
    ui = true
    pager = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    co = checkout
    tree = log --graph --pretty=oneline --decorate
[core]
    pager = vimpager
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.global_gitignore
[apply]
  whitespace = fix
