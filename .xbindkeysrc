#Kill Word
"xvkbd -xsendevent -text "\C\b""
    m:0x4 + c:27
    Control + r 

#Down
"xvkbd -xsendevent -text "\[Down]""
    m:0x4 + c:44
    Control + j 

#Up
"xvkbd -xsendevent -text "\[Up]""
    m:0x4 + c:45
    Control + k 

#Left
"xvkbd -xsendevent -text "\[Left]""
    m:0x4 + c:47
    Control + semicolon 

#BOL
"xvkbd -xsendevent -text "\[Home]""
    m:0x4 + c:38
    Control + a 

#EOL
"xvkbd -xsendevent -text "\[End]""
    m:0x4 + c:26
    Control + e 

#Right
"xvkbd -xsendevent -text "\[Right]""
    m:0x4 + c:40
    Control + d 

#Fwd Word
"xvkbd -xsendevent -text "\C\[Right]""
    m:0x4 + c:41
    Control + f 

#Bwd Word
"xvkbd -xsendevent -text "\C\[Left]""
    m:0x4 + c:46
    Control + l 

#Page Down
"xvkbd -xsendevent -text "\[Page_Down]""
    m:0x4 + c:31
    Control + i 

#Page Up
"xvkbd -xsendevent -text "\[Page_Up]""
    m:0x4 + c:25
    Control + w 

#End of Buffer
"xvkbd -xsendevent -text "\C\[End]""
    m:0x40 + c:42
    Mod4 + g 

#Beginning of Buffer
"xvkbd -xsendevent -text "\C\[Home]""
    m:0x40 + c:30
    Mod4 + u 

#SelectAll
"xvkbd -xsendevent -text "\Ca""
    m:0x40 + c:38
    Mod4 + a 

#Undo
"xvkbd -xsendevent -text "\Cz""
    m:0x40 + c:52
    Mod4 + z 

#Emacs Undo
"xvkbd -xsendevent -text "\Cz""
    m:0x4 + c:61
    Control + slash 

#Cut
"xvkbd -xsendevent -text "\Cx""
    m:0x40 + c:53
    Mod4 + x 

#Copy
"xvkbd -xsendevent -text "\Cc""
    m:0x40 + c:54
    Mod4 + c 

#Paste
"xvkbd -xsendevent -text "\Cv""
    m:0x40 + c:55
    Mod4 + v 

#Emacs Paste
"xvkbd -xsendevent -text "\Cv""
    m:0x4 + c:30
    Control + u 

#Save
"xvkbd -xsendevent -text "\Cs""
    m:0x4 + c:55
    Control + v 

#Search
"xvkbd -xsendevent -text "\Cf""
    m:0x4 + c:39
    Control + s 

#Next Tab
"xvkbd -xsendevent -text "\C\[Page_Down]""
    m:0x4 + c:28
    Control + t 

#Prev Tab
"xvkbd -xsendevent -text "\C\[Page_Up]""
    m:0x4 + c:33
    Control + p 

#CmdL
"xvkbd -xsendevent -text "\Cl""
    m:0x40 + c:46
    Mod4 + l 

#CmdW
"xvkbd -xsendevent -text "\Cw""
    m:0x40 + c:25
    Mod4 + w 

#CmdT
"xvkbd -xsendevent -text "\Ct""
    m:0x40 + c:28
    Mod4 + t 

#CmdN
"xvkbd -xsendevent -text "\Cn""
    m:0x40 + c:57
    Mod4 + n 

