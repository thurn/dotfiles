#!/usr/bin/env perl
use warnings;
use strict;
use File::Find;

sub wanted {
  if (m{($ARGV[0])}i) {
    print "$File::Find::name\n";
  }
}

if ($#ARGV == 0) {
  find(\&wanted, ".");
} elsif ($#ARGV == 1) {
  find(\&wanted, $ARGV[1]);
} else {
  print "Usage: search REGEX [directory]\n";
  print "Example: search .js ~\n";
}
